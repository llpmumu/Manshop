<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.manshop.android">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.view.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.view.LoginActivity" />
        <activity android:name=".ui.view.RegisterActivity" />
        <activity android:name=".ui.view.SearchActivity" />
        <activity android:name=".ui.view.SaleActivity" />
        <activity android:name=".ui.view.AddressDetailActivity" />
        <activity android:name=".ui.view.AddressListActivity" />
        <activity android:name=".ui.view.ProductDetailActivity">

        </activity>
        <activity android:name=".ui.view.LeaveMessageActivity" />
        <activity android:name=".ui.view.ProductListActivity" />
        <activity android:name=".ui.view.ComiketActivity"></activity>
    </application>

    <!-- 联网权限 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <!-- if you want to load images from a file OR from the internet -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
</manifest>